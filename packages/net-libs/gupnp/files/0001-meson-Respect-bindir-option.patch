Subject: [PATCH] meson: Respect bindir option

---
 meson.build       | 3 +++
 tools/meson.build | 5 ++++-
 2 files changed, 7 insertions(+), 1 deletion(-)

diff --git a/meson.build b/meson.build
index 94cd867..a3acea5 100644
--- a/meson.build
+++ b/meson.build
@@ -4,6 +4,9 @@ pkg = import('pkgconfig')
 
 cc = meson.get_compiler('c')
 
+prefix = get_option('prefix')
+bindir = join_paths(prefix, get_option('bindir'))
+
 netlink_available = cc.has_header('linux/rtnetlink.h')
 ifaddrs_available = cc.has_header('ifaddrs.h')
 
diff --git a/tools/meson.build b/tools/meson.build
index 42fe7e4..0fe666f 100644
--- a/tools/meson.build
+++ b/tools/meson.build
@@ -1 +1,4 @@
-install_data('gupnp-binding-tool-1.2', install_dir : 'bin')
+install_data(
+  'gupnp-binding-tool-1.2',
+  install_dir: bindir
+)
